{
	"compilerOptions": {
		"baseUrl": ".",
		"allowJs": true,
		"module": "esnext",
		"target": "es2017",
		"strict": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": [
				"./src/*"
			],
			"~/*": [
				"./*"
			]
		},
		"include": [
			"src/**/*.js",
			"src/**/*.jsx",
			"src/**/*.vue",
			"src/**/*.json"
		]
	},
	"exclude": [
		"dist",
		"node_modules"
	]
}